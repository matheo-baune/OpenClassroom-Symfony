{% extends 'base.html.twig' %}

{% block title %}Détail d'un éditeur{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>{{ editor.name }}</h1>
        <div class="card mb-1">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <a href="{{ path('app_editor_show', {id: editor.id}) }}" class="stretched-link link-dark">
                        <h4 class="mb-1">{{ editor.name }}</h4>
                    </a>
                    <small class="text-muted">Identifiant : {{ editor.id }}</small>
                </div>
            </div>
        </div>
        <a class="btn btn-secondary" href="{{ path('app_editor_index') }}">Retour à la liste</a>
        <a class="btn btn-warning" href="{{ path('app_admin_editor_edit', {id:editor.id}) }}">Modifier</a>
    </div>
{% endblock %}


